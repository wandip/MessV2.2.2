<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_next_month"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/next_month"
    tools:context="com.messedup.saurabh.mess2.NextMonthActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/next_month"
        android:id="@+id/imageView4"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="60dp">

    <com.messedup.saurabh.mess2.RalewayReg
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:id="@+id/ralewayReg"
        android:textSize="14sp" />


    <TextView
        android:text="Your Group Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:id="@+id/userGroupID"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ralewayReg"
        android:layout_marginBottom="15dp"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member1TxtView"
        android:id="@+id/member2TxtView"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text"
        android:textStyle="normal|bold"
        android:layout_alignStart="@+id/AddGroupBtn"
        android:layout_alignEnd="@+id/AddGroupBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member2TxtView"
        android:layout_alignStart="@+id/member2TxtView"
        android:id="@+id/member3TxtView"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/member2TxtView"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/member1TxtView"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="12dp"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@+id/member2TxtView"
        android:layout_alignEnd="@+id/member2TxtView" />

    <View
        android:layout_width="fill_parent"
        android:background="@color/row_background_dark_end"
        android:layout_toStartOf="@+id/textView11"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView11"
        android:layout_marginRight="5dp"
        android:id="@+id/topleftView"
        android:layout_height="2dp" />
    <View
        android:layout_width="fill_parent"
        android:background="@color/row_background_dark_end"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="false"
        android:id="@+id/toprightView"
        android:layout_below="@+id/textView11"
        android:layout_height="2dp" />

    <View
        android:background="@color/row_background_dark_end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:id="@+id/leftView"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:layout_below="@+id/textView11"
        android:layout_alignBottom="@+id/bottomView"
        android:layout_above="@+id/textView11"
        android:layout_width="2dp" />
    <View
        android:layout_height="fill_parent"
        android:background="@color/row_background_dark_end"
        android:layout_below="@+id/textView11"
        android:layout_marginRight="25dp"
        android:visibility="visible"
        android:layout_alignBottom="@+id/bottomView"
        android:layout_above="@+id/textView11"
        android:id="@+id/rightView"
        android:layout_toEndOf="@+id/bottomView"
        android:layout_width="2dp" />


    <Button
        android:text="Add Friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_button_3"
        android:id="@+id/AddGroupBtn"
        android:layout_marginLeft="50dp"
        android:hapticFeedbackEnabled="true"
        android:elevation="19dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/userGroupID"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:visibility="visible"
        android:textColor="@color/BackgroundWhiteColor1" />

    <View
        android:layout_width="fill_parent"
        android:background="@color/row_background_dark_end"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        android:layout_below="@+id/member3TxtView"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/toprightView"
        android:layout_alignStart="@+id/topleftView"
        android:id="@+id/bottomView"
        android:layout_height="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/optimized_blurbackground2"
        android:id="@+id/imageView5"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="15dp"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:layout_below="@+id/AddGroupBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Payment Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_button_3"
        android:id="@+id/PaymentStatusBtn"
        android:hapticFeedbackEnabled="true"
        android:elevation="19dp"
        android:textSize="16sp"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/ralewayReg"
        android:layout_alignBottom="@+id/ralewayReg"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/BackgroundWhiteColor1" />

    <TextView
        android:autoLink="email"
        android:text="@string/helptext"
        android:textSize="15dp"
        android:id="@+id/HelptextView"
        android:textColorLink="@color/screen4"
        android:textColor="@color/BackgroundWhiteColor1"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="end|bottom"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Next Month Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView18"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:layout_above="@+id/PaymentStatusBtn"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />
    </RelativeLayout>


</RelativeLayout>
