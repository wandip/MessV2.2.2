<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mess_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.messedup.saurabh.mess2.MessSelectionActivity">


    <TextView
        android:text="Select Your 4 Messes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textColor="@color/BackgroundWhiteColor"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:id="@+id/textView2" />

    <Button
        android:text="Select"
        android:textColor="@color/BackgroundWhiteColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_button"
        android:id="@+id/MessSelectBtn"
        android:textSize="17sp"
        android:padding="15dp"


        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />



    <TextView
        android:text="Not Now. Maybe Later?"
        android:textSize="15dp"
        android:id="@+id/HelptextView"
        android:textColor="@color/BackgroundWhiteColor"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:weightSum="3"
        android:layout_above="@+id/MessSelectBtn">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_weight="1"

            android:id="@+id/linearLayout3">

            <ToggleButton
                android:text="Mess 1"
                android:textColor="@color/BackgroundWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textOn="Mess 1 Selected"
                android:textOff="Mess 1"
                android:background="@drawable/check"
                android:id="@+id/Mess1Btn"
                android:textSize="17sp"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

            </ToggleButton>

            <ToggleButton
                android:text="Mess 2"
                android:textColor="@color/BackgroundWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/check"
                android:id="@+id/Mess2Btn"
                android:textOn="Mess 2 Selected"
                android:textOff="Mess 2"
                android:textSize="17sp"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

            </ToggleButton>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout1">

            <ToggleButton
                android:text="Mess 3"
                android:textColor="@color/BackgroundWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/check"
                android:id="@+id/Mess3Btn"
                android:textOn="Mess 3 Selected"
                android:textOff="Mess 3"
                android:textSize="17sp"
                android:padding="15dp"
                android:layout_below="@+id/Mess4Btn"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ToggleButton
                android:text="Mess 4"
                android:textColor="@color/BackgroundWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textOn="Mess 4 Selected"
                android:textOff="Mess 4"
                android:background="@drawable/check"
                android:id="@+id/Mess4Btn"
                android:textSize="17sp"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

            </ToggleButton>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2">

            <ToggleButton
                android:text="Mess 5"
                android:textColor="@color/BackgroundWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textOn="Mess 5 Selected"
                android:textOff="Mess 5"
                android:background="@drawable/check"
                android:id="@+id/Mess5Btn"
                android:textSize="17sp"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

            </ToggleButton>

            <ToggleButton
                android:text="Mess 6"
                android:textColor="@color/BackgroundWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textOn="Mess 6 Selected"
                android:textOff="Mess 6"
                android:background="@drawable/check"
                android:id="@+id/Mess6Btn"
                android:textSize="17sp"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

            </ToggleButton>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
