<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.messedup.saurabh.mess2.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/optimized_blurbackground2"
        android:id="@+id/imageView6"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_marginTop="30dp">

        <TextView
            android:autoLink="email"
            android:text="@string/helptext"
            android:textSize="15dp"
            android:id="@+id/HelptextView"
            android:textColor="@color/BackgroundWhiteColor"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/topBar"
                android:weightSum="1"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:id="@+id/imageButton13"
                    android:background="#00000000"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.messedup.saurabh.mess2.RalewaySemiBold
                        android:text="MESSED UP!"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BackgroundWhiteColor"
                        android:id="@+id/textView5"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextField"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColorHint="#F6F6F6"
                        android:ems="10"
                        android:id="@+id/NameEditText"
                        android:layout_weight="1"
                        android:hint="Name"
                        android:paddingBottom="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23"
                    android:paddingBottom="5dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:paddingBottom="15dp"
                        android:ems="10"
                        android:textColorHint="#F6F6F6"
                        android:id="@+id/CollegeEditText"
                        android:layout_weight="1"
                        android:hint="College" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23"
                    android:paddingBottom="5dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#F6F6F6"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/NumEditText"
                        android:paddingBottom="15dp"
                        android:layout_weight="1"
                        android:hint="Contact Number" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23"
                    android:paddingBottom="5dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="15dp"
                        android:textColorHint="#F6F6F6"
                        android:ems="10"
                        android:id="@+id/EmailEditText"
                        android:layout_weight="1"
                        android:hint="E-Mail " />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23"
                    android:paddingBottom="5dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingBottom="15dp"
                        android:typeface="sans"
                        android:textColorHint="#F6F6F6"
                        android:ems="10"
                        android:id="@+id/PassEditTex"
                        android:layout_weight="1"
                        android:hint="Password" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23"
                    android:paddingBottom="5dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:inputType="textPassword"
                        android:typeface="sans"
                        android:textColorHint="#F6F6F6"
                        android:ems="10"
                        android:id="@+id/CPassEditTex"
                        android:layout_weight="1"
                        android:hint="Confirm Password" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:text="Register"
                    android:textColor="@color/BackgroundWhiteColor"

                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/regButton"
                    android:background="@drawable/signup_button"
                    android:elevation="0dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    android:textSize="17sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.06"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
